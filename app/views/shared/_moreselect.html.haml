:javascript
  $(function(){
    $('.more-select li a').each(function(){
      var $href = $(this).attr('href');
      if(location.href.match($href)) {
        $(this).parent().addClass('current');
      } else {
        $(this).parent().removeClass('current');
      }
    });
  });
%ul.more-select
  %li
    = link_to "TODAY'S TASK", todays_task_tasks_path
  %li
    = link_to "TOMORROW'S TASK", tomorrows_task_tasks_path
  %li
    = link_to "ALL TASK", all_task_tasks_path
  %li
    = link_to "COMPLETED TASK", complete_task_tasks_path
